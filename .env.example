# Firebase Configuration (Client-side - these are public keys)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin Configuration (Server-side - keep these secret!)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# JWT Secret for token signing (keep this secret!)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Server Configuration
PORT=3000
NODE_ENV=development

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Alert Thresholds (can be overridden per patient)
DEFAULT_HEART_RATE_MIN=60
DEFAULT_HEART_RATE_MAX=100
DEFAULT_BLOOD_PRESSURE_SYSTOLIC_MAX=140
DEFAULT_BLOOD_PRESSURE_DIASTOLIC_MAX=90
DEFAULT_OXYGEN_SATURATION_MIN=95
DEFAULT_TEMPERATURE_MIN=97.0
DEFAULT_TEMPERATURE_MAX=99.5